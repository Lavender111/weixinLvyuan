.mySpecies-title{
  margin-bottom: 30rpx;
}
.title-image{
  width: 80rpx;
  height: 80rpx;
}
.title-text{
  font-size: 13pt;
  position: relative;
  top: -15rpx;
}
.mySpecies-content{
  display: flex;
  width: 100%;
}
.content-surplus,.content-recycle,.content-earnings{
  padding: 0 50rpx;
  margin-bottom: 20rpx;
}
.content-num{
  text-align: center;
}
.content-describe{
  margin-top: 10rpx;
  color: #999;
  font-size: 10pt;
}
.content-recycle,.content-earnings{
  float: right;
}
/* 推荐区样式 */

.list-image{
  margin: 20rpx 20rpx;
  border-radius: 10rpx;
  width: 200rpx;
  height: 130rpx;
}
.list-txt{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.txt-tip{

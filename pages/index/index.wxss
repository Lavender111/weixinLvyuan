.content-info-slide{
  height: 330rpx;
  margin-bottom: 20rpx;
}
.content-info-slide image{
  margin-left: 20rpx;
  border-radius: 15rpx;
  width: 95%;
  height: 100%;
}
/* 分类 */
.entrance{
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}
.entrance-content{
  flex: 43%;
  height: 30vh;
}
.entrance-img{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.entrance-title{
  font-size:12pt;
  position:relative;
  top:-13vh;
  margin-left:20rpx;
}
.entrance-tip{
  color:#928988;
  font-size:21rpx;
  position:relative;
  top:-12vh;
  margin-left:20rpx;
}
.entrance-content1{
  flex: 57%;
  display: flex;
  flex-wrap: wrap;
}
.entrance-content1 > view {
  width: 100%;
  height: 14vh;
  margin-left: 25rpx;
}
.entrance-content1 > view:first-child{
  margin-bottom: 20rpx;
}

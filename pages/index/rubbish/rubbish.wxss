/* pages/details/details.wxss */
page {
  background-color: #e0eee8;
}

.tab {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  height: 100%;
}

.box {
  width: 480rpx;
  height: 480rpx;
  /* background-color: gold; */
  display: block;
}

.box view {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 230rpx;
  height: 230rpx;
  padding: 0;
  float: left;
}

.recoverable-garbage {
  background-color: rgb(33, 82, 135);
  border-radius: 110rpx 110rpx 38rpx 110rpx;
  margin: 0 10rpx 10rpx 0;
}

.harmful-waste {
  background-color: rgb(234, 62, 48);
  border-radius: 110rpx 110rpx 110rpx 38rpx;
  margin: 0 0 10rpx 10rpx;
}

.kitchen-waste {
  background-color: rgb(5, 130, 64);
  border-radius: 110rpx 38rpx 110rpx 110rpx;
  margin: 10rpx 10rpx 0 0;
}

.other-waste {
  background-color: rgb(46, 44, 42);
  border-radius: 38rpx 110rpx 110rpx 110rpx;
  margin: 10rpx 0 0 10rpx;
}

.garbage-icon {
  width: 125rpx;
  height: 125rpx;
  margin-top: 30rpx;
}

.garbage-text {
  margin-top: 15rpx;
  color: white;
}

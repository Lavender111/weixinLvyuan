page{
  background-color: #f6f6f6;
}
.order-list{
  margin: 20rpx 0rpx;
}
.way-extract{
  background-color: #fff;
  width: 100%;
  padding: 20rpx 20rpx;
  
  border-bottom: 1rpx solid #eee;
}
.way-extract > view{
  padding: 10rpx 0rpx;
}
.extract-address{
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.address-info{
  display: flex;
  flex-direction: column;
  margin: 0rpx 20rpx;
}
.site-icon{
  font-size: 45rpx
}
.weui-cell{
  display: flex;
  align-items: center;
  color: #000;
}
.weui-cell > view {
 margin: 15rpx 0;
}
.distance{
 position: relative;
 left: 20%;
}
.reserve_inp{
  width: 70%;
}
.arrows{
  position: absolute;
  right: 20rpx;
}
/* 商品列表 */
.com-content{
  background-color: #fff;
}
.content-commodity{
  display: flex;
  align-items: center;
}
.com-img{
  width: 180rpx;
  height: 180rpx;
  padding: 20rpx;
}
.com-info{
  display: flex;
  flex-direction: column;
}
.info-title{
  margin-bottom: 10rpx;
}
.info-time{
  color: #919191;
  font-size: 25rpx;
  margin-bottom: 20rpx;
}
.info-price{
  color: #de4f0b;
  margin-top: 20rpx;
}

/* 支付方式 */
.pay-way{
  display: flex;
  align-items: center;
  background-color: #fff;
  margin: 10rpx 0rpx;
  padding: 20rpx;
}
picker{
  display: flex;
  align-items: center;
}
.input{
  font-size: 11pt;
  margin-left: 30rpx;
}

/* 结算按钮 */
.jiesuan-box{
  z-index: 2;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top:1px solid #eee; 
  background-color: #fff;
}
.jiesuan-box .to-pay-btn{
  width:250rpx;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  background-color: #e64340;
  font-size:32rpx;
  color:#ffffff;
  border-radius: 0;
}

.jiesuan-box  .left-price{
  display: flex;
  width: 500rpx;
  justify-content:flex-end;
  line-height: 100rpx;
  padding: 0 30rpx 0 0;
  font-size:32rpx;
  box-sizing: border-box;
}

.jiesuan-box .total{
  color: #e64340;
  text-align: right;
}
/* pages/personal/unused/unused.wxss */
.header {
  width: 100%;
  height: 44px;
  border-bottom: 1rpx solid #e4e4e4;
  display: flex;
  background: #fff;
  line-height: 44px;
  position: fixed;
  top: 0;
  z-index: 100;
}

.header view {
  flex: 1;
  text-align: center;
}

.header .active {
  color: #4ac181;
  border-bottom: 1rpx solid #4ac181;
}
.com-content{
  border-bottom:2rpx solid #eee;
}
.content-commodity{
  display: flex;
  align-items: center;
}
.com-img{
  width: 180rpx;
  height: 180rpx;
  padding: 20rpx;
}
.com-info{
  display: flex;
  flex-direction: column;
}
.info-title{
  margin-bottom: 10rpx;
}
.info-time{
  color: #919191;
  font-size: 25rpx;
  margin-bottom: 20rpx;
}
.info-price{
  color: #e38745;
  margin-top: 20rpx;
}
.com-icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  right: 20rpx;
}
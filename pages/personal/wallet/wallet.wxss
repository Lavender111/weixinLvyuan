/* pages/personal/wallet/wallet.wxss */
.wallet{
  background-color: #4ac181;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.wallet > view{
  color: #fff;
  font-size: 20pt;
  margin: 20rpx;
}
.tab{
  display: flex;
  width: 100%;
  border-bottom: 1rpx solid #eee;
}
.tab > view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 15rpx;
}
.tab-recharge{
  border-right: 1rpx solid #eee;
}
image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.listContain {
  width: 100%;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  padding: 30rpx;
  flex-direction: column;
}

.title {
  margin-top: 20rpx;
  width: 100%;
  font-size: 28rpx;
  color: #b2b2b2;
  display: flex;
  letter-spacing: 4rpx;
  justify-content: center;
}

.list {
  width: 100%;
  height: 110rpx;
  border-bottom: 1rpx solid #eee;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.list_1 {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list_1_1 {
  font-size: 28rpx;
  letter-spacing: 4rpx;
}

.list_1_2 {
  font-size: 26rpx;
  letter-spacing: 2rpx;
  color: #b2b2b2;
}

.list_2 {
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.nocontent {
  width: 100%;
  height: calc(100% - 438rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
}

.nocontent image {
  padding-left: 80rpx;
  width: 340rpx;
  height: 272rpx;
}

.blank_text {
  padding-top: 40rpx;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  color: #c6c6c8;
}

/* pages/personal/indent/pay/pay.wxss */
page{
  background-color: #f3f3f3;
}
.condition-detail{
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 15rpx;
}
.detail-content{
  padding: 20rpx;
}
.content-info{
  height: 45rpx;
  display: flex;
  align-items: center;
}
.reserve_inp{
  margin-left: 30rpx;
}
.input{
  width: 80rpx;
  border: 1rpx solid #eee;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
}
.detail-price{
  display: flex;
  align-items: center;
}
.detail-price > input{
  color: brown;
}
.payTitle{
  background-color: #fff;
}
.payTitle text{
      line-height: 90rpx;
      padding-left: 20rpx;
  }
  
.payType{
      width: 100%;
      background: #fff;
  }
  .payType>view{
      height: 140rpx;
      line-height: 140rpx;
      padding: 0rpx 30rpx;
      border-bottom: 1rpx solid #f3f3f3;
      background-size: 40rpx 40rpx;
  }
  .payType .payList>view{
      float: left;
  }
  .payType .payList .payImg{
      width: 60rpx;
      height: 60rpx;
      margin-right: 30rpx;
      padding-top: 20rpx;
  }
  .arrows{
    position: absolute;
    right: 20rpx;
  }
  .payType .payList .payImg image{
      width: 100%;
      height: 100%;
  }
  .pay-tip{
    margin-top: 15rpx;
  }
  .pay-tip text{
    padding: 20rpx;
  }
  